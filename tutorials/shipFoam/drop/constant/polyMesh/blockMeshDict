FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          blockMeshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

vertices        
(
(-3 -3 -3)	//0
(3 -3 -3)	//1
(3 3 -3)	//2
(-3 3 -3)	//3
(-3 -3 2)	//4
(3 -3 2)	//5
(3 3 2)	//6
(-3 3 2)	//7

);

blocks          
(
    hex (0 1 2 3 4 5 6 7) water (40 40 75) simpleGrading (1 1 1)	//water
);

edges           
(
);

patches         
//Convention: looking from inside the block towards the patch, the order of vertices must rotate clockwise
(
    patch Walls 
    (
	(0 4 7 3)
        (0 3 2 1)
        (0 1 5 4)
        (2 3 7 6)
        (1 2 6 5)
    )
    patch Top
    (
        (4 5 6 7)
    )
);

mergePatchPairs
(
);

